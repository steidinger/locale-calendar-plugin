<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
    <CheckBox android:id="@+id/preview_match"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:clickable="false"
              android:layout_marginRight="6dip"
              android:layout_alignParentTop="true"
            />
    <TextView android:id="@+id/preview_title"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_toRightOf="@id/preview_match"
              android:textAppearance="?android:attr/textAppearanceMedium"
            />
    <TextView android:id="@+id/preview_date"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@id/preview_title"
              android:layout_toRightOf="@id/preview_match"
              android:textAppearance="?android:attr/textAppearanceSmall"

            />
    <TextView android:id="@+id/preview_location"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@id/preview_date"
              android:layout_toRightOf="@id/preview_match"
              android:textAppearance="?android:attr/textAppearanceSmall"

            />
    <TextView android:id="@+id/preview_status"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@id/preview_title"
              android:layout_toRightOf="@id/preview_date"
              android:layout_alignParentRight="true"
              android:gravity="right"
              android:textAppearance="?android:attr/textAppearanceSmall"

            />

</RelativeLayout>